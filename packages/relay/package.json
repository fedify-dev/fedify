{
  "name": "@fedify/relay",
  "version": "2.0.0",
  "description": "ActivityPub relay support for Fedify",
  "keywords": [
    "Fedify",
    "ActivityPub",
    "Fediverse",
    "Relay"
  ],
  "author": {
    "name": "Jiwon Kwon",
    "email": "work@kwonjiwon.org"
  },
  "homepage": "https://fedify.dev/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fedify-dev/fedify.git",
    "directory": "packages/relay"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fedify-dev/fedify/issues"
  },
  "funding": [
    "https://opencollective.com/fedify",
    "https://github.com/sponsors/dahlia"
  ],
  "type": "module",
  "main": "./dist/mod.cjs",
  "module": "./dist/mod.js",
  "types": "./dist/mod.d.ts",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/mod.d.ts",
        "require": "./dist/mod.d.cts",
        "default": "./dist/mod.d.ts"
      },
      "import": "./dist/mod.js",
      "require": "./dist/mod.cjs",
      "default": "./dist/mod.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/",
    "package.json"
  ],
  "dependencies": {
    "@fedify/fedify": "workspace:^",
    "@fedify/vocab": "workspace:*",
    "@js-temporal/polyfill": "catalog:",
    "@logtape/logtape": "catalog:"
  },
  "devDependencies": {
    "@fedify/vocab-runtime": "workspace:^",
    "tsdown": "catalog:",
    "typescript": "catalog:"
  },
  "scripts": {
    "build": "tsdown",
    "prepack": "tsdown",
    "prepublish": "tsdown",
    "test": "tsdown && cd dist/ && node --test",
    "test:bun": "tsdown && cd dist/ && bun test --timeout 60000"
  }
}
