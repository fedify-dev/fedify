---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/astro-fedify-logo.svg" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
